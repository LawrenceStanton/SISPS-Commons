{
	"version": 7,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 24
	},
	"configurePresets": [
		{
			"name": "Local",
			"displayName": "Local Build",
			"description": "Local Build for Unit Testing",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
				"CMAKE_C_COMPILER": "gcc-13",
				"CMAKE_CXX_COMPILER": "g++-13",
				"CMAKE_BUILD_TYPE": "Debug"
			},
			"warnings": {},
			"binaryDir": "Build/Test"
		},
		{
			"name": "arm-none-eabi",
			"displayName": "ARM GCC Cross Compilation",
			"description": "Cross Compilation for Embedded ARM Processors",
			"hidden": true,
			"cacheVariables": {},
			"warnings": {},
			"toolchainFile": "Modules/SISPS-Commons/CMake/arm-none-eabi.cmake"
		},
		{
			"name": "Embedded Debug",
			"inherits": ["arm-none-eabi"],
			"displayName": "Debug Embedded Device",
			"description": "Debug Build to Target Embedded Device",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
				"CMAKE_BUILD_TYPE": "Debug"
			},
			"binaryDir": "Build/Debug"
		},
		{
			"name": "Embedded Release",
			"inherits": ["Embedded Debug"],
			"displayName": "Release to Embedded Device",
			"description": "Release Build to Target Embedded Device",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			},
			"binaryDir": "Build/Release"
		}
	],
	"buildPresets": [
		{
			"name": "Embedded",
			"displayName": "Embedded Build",
			"description": "Build to Target Embedded Device",
			"configurePreset": "Embedded",
			"environment": {},
			"cleanFirst": false,
			"targets": ["all"],
			"jobs": 12,
			"verbose": false
		},
		{
			"name": "Local",
			"displayName": "Local Build",
			"description": "Local Build for Unit Testing",
			"configurePreset": "Local",
			"environment": {},
			"targets": ["all", "test"],
			"cleanFirst": false,
			"jobs": 12,
			"verbose": false
		}
	],
	"testPresets": [
		{
			"name": "Local Test",
			"displayName": "Local Tests",
			"description": "Local Testing on Host Machine",
			"configurePreset": "Local"
		}
	]
}
